# Maintainer: Thorsten Roth <elthoro@gmx.de>
pkgname=stackandconquer
pkgver=0.8.0
pkgrel=1
pkgdesc='StackAndConquer is a challenging tower conquest board game.'
arch=('i686' 'x86_64')
url='https://github.com/ElTh0r0/stackandconquer/'
license=('GPL3')
depends=('qt5-base' 'qt5-declarative' 'qt5-svg')
source=("$pkgname-$pkgver.tar.gz")
md5sums=('dab15fb05fc9536e28f77dab6c2d9b50')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    qmake-qt5
    make
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    INSTALL_ROOT=$pkgdir make install
}
